datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Patient {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  dob       DateTime
  notes     Note[]
  createdAt DateTime @default(now())
}

model Note {
  id         String   @id @default(uuid())
  patientId  String
  audioUrl   String
  transcript String?
  summary    String?
  oasisG     OasisG?
  createdAt  DateTime @default(now())

  patient Patient @relation(fields: [patientId], references: [id])
}

model OasisG {
  id     String @id @default(uuid())
  noteId String @unique
  m1800  Int
  m1810  Int
  m1820  Int
  m1830  Int
  m1840  Int
  m1850  Int
  m1860  Int

  note Note @relation(fields: [noteId], references: [id])
}
